     $               , utms(ax1,ay1,az1,lelt,ldimt)
     $               , vtms(ax1,ay1,az1,lelt,ldimt)
     $               , wtms(ax1,ay1,az1,lelt,ldimt)
c----           user test, add E(X^3), E(X^4)
     $               , u3ms(ax1,ay1,az1,lelt)
     $               , v3ms(ax1,ay1,az1,lelt)
     $               , w3ms(ax1,ay1,az1,lelt)
     $               , t3ms(ax1,ay1,az1,lelt,ldimt)
     $               , p3ms(ax2,ay2,az2,lelt)
     $               , u4ms(ax1,ay1,az1,lelt)
     $               , v4ms(ax1,ay1,az1,lelt)
