      common /avgcmnr/ atime,timel

      common /chkavg/  uavg(ax1,ay1,az1,lelt)
     $               , vavg(ax1,ay1,az1,lelt)
     $               , wavg(ax1,ay1,az1,lelt)
     $               , tavg(ax1,ay1,az1,lelt,ldimt)
