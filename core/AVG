     $               , Rsvg(ax1,ay1,az1,lelt)
     $               , Qwvg(ax1,ay1,az1,lelt)
     $               , Rwvg(ax1,ay1,az1,lelt)
c----           user test, average of temperature gradients
     $               , Txvg(ax1,ay1,az1,lelt,ldimt)
     $               , Tyvg(ax1,ay1,az1,lelt,ldimt)
     $               , Tzvg(ax1,ay1,az1,lelt,ldimt)

      common /chkrms/  urms(ax1,ay1,az1,lelt)
     $               , vrms(ax1,ay1,az1,lelt)
